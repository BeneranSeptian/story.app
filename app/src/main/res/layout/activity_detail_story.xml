<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.detail.DetailStoryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="DETAIL STORY"
            app:navigationIcon="@drawable/ic_arrow_back"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />
    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/iv_detail"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_appbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_title"
        android:alpha="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Story by septian"/>

    <TextView
        android:id="@+id/tv_description"
        android:alpha="0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed libero odio, finibus at malesuada quis, euismod ut ipsum. Ut finibus, purus in blandit faucibus, nisl neque placerat magna, sed tempor nisl tortor rhoncus diam. Orci varius natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Maecenas eu interdum nisi, a vehicula lectus. Proin placerat metus non tincidunt consectetur. Praesent sit amet mauris felis. Nunc ornare vestibulum purus, eu aliquet diam luctus in. Pellentesque vitae leo non ante congue pellentesque non vel erat. Donec at massa eu augue bibendum vehicula. Nunc eu suscipit eros, eget rutrum libero. Mauris mattis nisi a orci laoreet condimentum. Suspendisse et egestas eros. Etiam id enim sit amet neque facilisis porta. Aliquam eu iaculis nunc, eu porttitor lacus."
        />


</androidx.constraintlayout.widget.ConstraintLayout>